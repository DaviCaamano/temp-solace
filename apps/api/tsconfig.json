{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~*": ["./src/*"],
      "@*": ["../web/src/*"],
      "#*": ["../../packages/shared/*"],
      "@pages/*": ["../web/pages/*"],
      "@images/*": ["../web/public/images/*"],
      "@svg/*": ["../web/public/svg/*"],
      "@fonts/*": ["../web/public/fonts/*"],
      "@public/*": ["../web/src/public/*"],
      "~interfaces/*": ["./interfaces/*"],
      "~utils/*": ["./utils/*"]
    }
  }
}
