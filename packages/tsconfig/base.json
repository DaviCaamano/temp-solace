{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "~*": ["../../apps/api/src/*"],
      "@components/*": ["../../apps/web/src/components/*"],
      "@constants/*": ["../../apps/web/src/constants/*"],
      "@context/*": ["../../apps/web/src/context/*"],
      "@hooks/*": ["../../apps/web/src/hooks/*"],
      "@interface/*": ["../../apps/web/src/interface/*"],
      "@styles/*": ["../../apps/web/src/styles/*"],
      "@tests/*": ["../../apps/web/src/tests/*"],
      "@utils/*": ["../../apps/web/src/utils/*"],
      "#*": ["../../packages/shared/*"],
      "@pages/*": ["../../apps/web/pages/*"],
      "@images/*": ["../../apps/web/public/images/*"],
      "@svg/*": ["../../apps/web/public/svg/*"],
      "@fonts/*": ["../../apps/web/public/fonts/*"],
      "@public/*": ["../../apps/web/src/public/*"],
      "~interfaces/*": ["../../api/interfaces/*"],
      "~utils/*": ["../../api/utils/*"],
      "~root/*": ["../../*"]
    }
  },
  "exclude": ["node_modules"]
}
